<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="357dp"
                android:layout_height="57dp"
                android:layout_marginTop="36dp"
                android:text="Submit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.442"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnAddPicture" />

            <TextView
                android:id="@+id/txtViewGeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="General"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txtDate"
                android:layout_width="190dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Date"
                android:textAlignment="center"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtName" />

            <EditText
                android:id="@+id/txtTime"
                android:layout_width="190dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Time"
                android:inputType="time"
                android:textAlignment="center"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.411"
                app:layout_constraintStart_toEndOf="@+id/txtDate"
                app:layout_constraintTop_toBottomOf="@+id/txtName" />

            <TextView
                android:id="@+id/txtViewCameraSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Camera Settings"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rdoGrpPhotoType" />

            <EditText
                android:id="@+id/txtShutterSpeed"
                android:layout_width="128dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Shutter Speed"
                android:inputType="number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtViewCameraSettings" />

            <EditText
                android:id="@+id/txtAperture"
                android:layout_width="128dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Aperture"
                android:inputType="number"
                app:layout_constraintEnd_toStartOf="@+id/txtIso"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toEndOf="@+id/txtShutterSpeed"
                app:layout_constraintTop_toBottomOf="@+id/txtViewCameraSettings" />

            <EditText
                android:id="@+id/txtIso"
                android:layout_width="128dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:ems="10"
                android:hint="ISO"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtViewCameraSettings" />

            <EditText
                android:id="@+id/txtLens"
                android:layout_width="353dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Lens"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtAperture" />

            <EditText
                android:id="@+id/txtCamera"
                android:layout_width="353dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Camera"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtLens" />

            <EditText
                android:id="@+id/txtFilmOrRes"
                android:layout_width="353dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Film Used"
                android:inputType="textPersonName"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtCamera" />

            <TextView
                android:id="@+id/txtViewAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="About"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtFilmOrRes" />

            <EditText
                android:id="@+id/txtDescription"
                android:layout_width="353dp"
                android:layout_height="131dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:singleLine="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.482"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtViewAbout" />

            <RadioGroup
                android:id="@+id/rdoGrpExposure"
                android:layout_width="356dp"
                android:layout_height="141dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDescription">

                <RadioButton
                    android:id="@+id/rdoOverExposed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Over Exposed" />

                <RadioButton
                    android:id="@+id/rdoUnderExposed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UnderExposed" />

                <RadioButton
                    android:id="@+id/rdoPerfectExposure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perfect Exposure" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rdoGrpPhotoType"
                android:layout_width="245dp"
                android:layout_height="127dp"
                android:layout_marginTop="36dp"
                android:checkedButton="@id/rdoFilm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTime">

                <TextView
                    android:id="@+id/txtPhotoMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Photo Meduim"
                    android:textAlignment="center" />

                <RadioButton
                    android:id="@+id/rdoFilm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Film" />

                <RadioButton
                    android:id="@+id/rdoDigital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Digital" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/rdoGrpPhotoType"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTime" />

            <EditText
                android:id="@+id/txtName"
                android:layout_width="357dp"
                android:layout_height="47dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtViewGeneral" />

            <Button
                android:id="@+id/btnAddPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Add Picture"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rdoGrpExposure" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="357dp"
                android:layout_height="57dp"
                android:layout_marginTop="36dp"
                android:text="Delete Entry"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnSubmit" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>